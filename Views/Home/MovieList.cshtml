@{
    ViewBag.Title = "THE Movie List";
    ViewBag.Header = "This is the One and Only Joel Hilton Film Collection";
}

@model IEnumerable<baconsale.Models.MovieResponse>

<div>
    <table id="movies-table">
        <thead>
            <tr><th>Category</th><th>Title</th><th>Year</th><th>Director</th><th>Rating</th><th>Edited?</th><th>Lent To</th><th>Notes</th></tr>
        </thead>
        <tbody>
            @*output each response in the movieresponse list into the following table*@
            @foreach (baconsale.Models.MovieResponse response in Model)
            {
            <tr>
                <td>@response.Category</td>
                <td>@response.Title</td>
                <td>@response.Year</td>
                <td>@response.Director</td>
                <td>@response.Rating</td>
                <td>@response.Edited</td>
                <td>@response.LentTo</td>
                <td>@response.Notes</td>
            </tr>
            }
        </tbody>
    </table>
</div>